<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlAbout"
    android:layout_width="325dp"
    android:layout_height="480dp"
    android:layout_marginLeft="42.5dp"
    android:layout_marginTop="120dp"
    android:background="#D7FFFFFF"
    android:clickable="true"
    tools:context=".AboutCASFragment">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="141dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/cas" />

    <TextView
        android:id="@+id/txtIntro"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:background="#00FFFFFF"
        android:text="This App is for Collecting Stuff and Share it!"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="307dp"
        android:background="#99FFFFFF"
        android:fontFamily="cursive"
        android:lineSpacingExtra="2sp"
        android:text="@string/app_slash_title"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#2196F3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/txtDeveloperTitle"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="241dp"
        android:background="#00FFFFFF"
        android:text="Develop BY:   YUNQI PANG" />

    <TextView
        android:id="@+id/txtDeveloperEmail"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="271dp"
        android:autoLink="email"
        android:background="#00FFFFFF"
        android:text="Contact Email: yupa399@ess.ais.ac.nz" />

    <TextView
        android:id="@+id/txtDeveloperPhone"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="303dp"
        android:autoLink="all"
        android:background="#00FFFFFF"
        android:text="Contact Phone: 2102261643" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginBottom="85dp"
        android:text="@string/mr_controller_close_description" />
</RelativeLayout>