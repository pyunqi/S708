<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlAbout"
    android:layout_width="fill_parent"
    android:layout_height="420dp"
    android:layout_marginTop="50dp"
    android:background="#D7FFFFFF"
    android:clickable="true"
    android:gravity="center"
    tools:context=".fragments.AboutCASFragment">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="141dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/cas" />

    <TextView
        android:id="@+id/txtIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="57dp"
        android:background="#00FFFFFF"
        android:text="This App is for Collecting Stuff and Share it!"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="229dp"
        android:background="#99FFFFFF"
        android:fontFamily="cursive"
        android:lineSpacingExtra="2sp"
        android:text="@string/app_slash_title"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#2196F3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/txtDeveloperTitle"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="243dp"
        android:background="#00FFFFFF"
        android:text="Develop BY:   YUNQI PANG" />

    <TextView
        android:id="@+id/txtDeveloperEmail"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="273dp"
        android:autoLink="email"
        android:background="#00FFFFFF"
        android:text="Contact Email: yupa399@ess.ais.ac.nz" />

    <TextView
        android:id="@+id/txtDeveloperPhone"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="305dp"
        android:autoLink="all"
        android:background="#00FFFFFF"
        android:text="Contact Phone: 2102261643" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="145dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/btn_cor"
        android:text="@string/mr_controller_close_description" />
</RelativeLayout>